<Button>
    background_normal: ''
    background_color: (22/255, 22/255, 28/255)
    size_hint: (0.2, 0.2)

<CalculatorWidget>
    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height

        TextInput:
            id: input_box
            text:'0'
            foreground_color: (56/255, 180/255, 80/255)
            font_size: 43
            multiline: False
            halign: 'right'
            size_hint: (1, 0.19)
            background_normal: ''
            background_color: (30/255, 32/255, 41/255)
            

        GridLayout:
            cols: 4
            rows: 5
            
            #### Row 1 ####
            Button:
                text:'%'
                font_size: 32
                on_press: root.signs('%')
            
            Button:
                text:'C'
                font_size: 32
                on_press: root.clear()
            
            Button:
                text: u'\u00AB'
                font_size: 32
                on_press: root.remove_last()

            Button:
                text:'/'
                font_size: 32
                background_color: (31/255, 55/255, 65/255)
                on_press: root.signs('/')
            
            #### Row 2 ####

            Button:
                text:'7'
                font_size: 32
                on_press: root.button_value(7)
            
            Button:
                text:'8'
                font_size: 32
                on_press: root.button_value(8)
            
            Button:
                text:'9'
                font_size: 32
                on_press: root.button_value(9)

            Button:
                text:'x'
                font_size: 32
                background_color: (31/255, 55/255, 65/255)
                on_press: root.signs('*')
            
            #### Row 3 ####

            Button:
                text:'4'
                font_size: 32
                on_press: root.button_value(4)
            
            Button:
                text:'5'
                font_size: 32
                on_press: root.button_value(5)
            
            Button:
                text:'6'
                font_size: 32
                on_press: root.button_value(6)

            Button:
                text:'-'
                font_size: 32
                background_color: (31/255, 55/255, 65/255)
                on_press: root.signs('-')

            #### Row 4 ####

            Button:
                text:'1'
                font_size: 32
                on_press: root.button_value(1)
            
            Button:
                text:'2'
                font_size: 32
                on_press: root.button_value(2)
            
            Button:
                text:'3'
                font_size: 32
                on_press: root.button_value(3)

            Button:
                text:'+'
                font_size: 32
                background_color: (31/255, 55/255, 65/255)
                on_press: root.signs('+')

            #### Row 5 ####

            Button:
                text:'+/-'
                font_size: 32
                on_press: root.positive_negative()
            
            Button:
                text:'0'
                font_size: 32
                on_press: root.button_value(0)
            
            Button:
                text:'.'
                font_size: 32
                on_press: root.dot()

            Button:
                text:'='
                font_size: 32
                background_color: (31/255, 55/255, 65/255)
                on_press: root.result()